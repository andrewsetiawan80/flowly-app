generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(cuid())
  email        String    @unique
  name         String?
  image        String?
  passwordHash String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // User preferences
  settings      Json?     // { theme, defaultView, pomodoroSettings, slackWebhookUrl, etc. }
  calendarToken String?   @unique // Token for iCal feed URL
  accounts     Account[]
  sessions     Session[]
  lists        List[]
  tasks        Task[]    @relation("TaskOwner")
  assignedTasks Task[]   @relation("TaskAssignee")
  tags         Tag[]
  // Workspace relations
  ownedWorkspaces  Workspace[]       @relation("WorkspaceOwner")
  memberships      WorkspaceMember[]
  invitationsSent  Invitation[]      @relation("InvitationSender")
}

// ============================================
// Workspace & Teams
// ============================================
enum WorkspaceRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Workspace {
  id          String   @id @default(cuid())
  name        String
  description String?
  slug        String   @unique // URL-friendly identifier
  color       String?  @default("#6366f1")
  ownerId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner       User              @relation("WorkspaceOwner", fields: [ownerId], references: [id])
  members     WorkspaceMember[]
  invitations Invitation[]
  lists       List[]
  tasks       Task[]

  @@index([ownerId])
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String
  userId      String
  role        WorkspaceRole @default(MEMBER)
  joinedAt    DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([userId])
  @@index([workspaceId])
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model Invitation {
  id          String           @id @default(cuid())
  workspaceId String
  email       String           // Invitee email
  role        WorkspaceRole    @default(MEMBER)
  status      InvitationStatus @default(PENDING)
  token       String           @unique @default(cuid()) // Unique invite token
  invitedById String
  expiresAt   DateTime         // When the invitation expires
  createdAt   DateTime         @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy User      @relation("InvitationSender", fields: [invitedById], references: [id])

  @@index([email])
  @@index([workspaceId])
  @@index([token])
}

enum ListType {
  PROJECT
  CHECKLIST
}

model List {
  id          String     @id @default(cuid())
  name        String
  description String?
  color       String?
  type        ListType   @default(PROJECT)
  ownerId     String
  parentId    String?    // For nested projects (sub-projects)
  workspaceId String?    // null = personal project (backward compat)
  owner       User       @relation(fields: [ownerId], references: [id])
  parent      List?      @relation("ProjectHierarchy", fields: [parentId], references: [id], onDelete: Cascade)
  children    List[]     @relation("ProjectHierarchy")
  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  tasks       Task[]

  @@index([ownerId])
  @@index([parentId])
  @@index([workspaceId])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Status {
  TODO
  DOING
  DONE
  CANCELED
}

model Task {
  id                 String    @id @default(cuid())
  listId             String
  ownerId            String
  title              String
  notes              String?
  status             Status    @default(TODO)
  priority           Priority  @default(MEDIUM)
  dueAt              DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  completedAt        DateTime? // When task was completed
  // Assignment
  assigneeId         String?   // User assigned to this task
  workspaceId        String?   // null = personal task
  // Recurrence fields
  recurrenceRule     String?   // 'daily', 'weekly', 'monthly', 'yearly'
  recurrenceInterval Int       @default(1) // e.g., every 2 weeks
  nextDueAt          DateTime? // Next occurrence date
  // Time tracking
  estimatedMinutes   Int?      // Estimated time to complete
  actualMinutes      Int       @default(0) // Actual time spent
  // Organization
  order              Int       @default(0) // For drag-drop ordering

  list        List        @relation(fields: [listId], references: [id])
  owner       User        @relation("TaskOwner", fields: [ownerId], references: [id])
  assignee    User?       @relation("TaskAssignee", fields: [assigneeId], references: [id])
  workspace   Workspace?  @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  subtasks      Subtask[]
  comments      Comment[]
  attachments   Attachment[]
  tags          TaskTag[]
  dependsOn     TaskDependency[] @relation("DependentTask")
  dependedOnBy  TaskDependency[] @relation("DependencyTask")

  @@index([ownerId, status])
  @@index([dueAt])
  @@index([listId])
  @@index([assigneeId])
  @@index([workspaceId])
}

// ============================================
// Task Dependencies
// ============================================
enum DependencyType {
  BLOCKS       // taskId blocks dependsOnTaskId (finish-to-start)
  BLOCKED_BY   // taskId is blocked by dependsOnTaskId
}

model TaskDependency {
  id              String         @id @default(cuid())
  taskId          String         // The dependent task
  dependsOnTaskId String         // The prerequisite task
  type            DependencyType @default(BLOCKS)
  createdAt       DateTime       @default(now())

  task       Task @relation("DependentTask", fields: [taskId], references: [id], onDelete: Cascade)
  dependsOn  Task @relation("DependencyTask", fields: [dependsOnTaskId], references: [id], onDelete: Cascade)

  @@unique([taskId, dependsOnTaskId])
  @@index([taskId])
  @@index([dependsOnTaskId])
}

// ============================================
// Project Templates
// ============================================
model ProjectTemplate {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String?
  ownerId     String
  data        Json     // Serialized project structure (tasks, subtasks)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([ownerId])
}

// ============================================
// Automations Engine
// ============================================
model Automation {
  id              String    @id @default(cuid())
  name            String
  ownerId         String
  workspaceId     String?
  isActive        Boolean   @default(true)
  trigger         Json      // { event: 'task.created', conditions: [...] }
  action          Json      // { type: 'change_status', params: { status: 'DOING' } }
  lastTriggeredAt DateTime?
  triggerCount    Int       @default(0)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  logs AutomationLog[]

  @@index([ownerId])
  @@index([isActive])
}

model AutomationLog {
  id           String   @id @default(cuid())
  automationId String
  event        String
  success      Boolean
  error        String?
  data         Json?    // snapshot of triggered entity
  createdAt    DateTime @default(now())

  automation Automation @relation(fields: [automationId], references: [id], onDelete: Cascade)

  @@index([automationId])
  @@index([createdAt(sort: Desc)])
}

// ============================================
// Tags/Labels System
// ============================================
model Tag {
  id        String    @id @default(cuid())
  name      String
  color     String    @default("#6366f1") // Default indigo
  ownerId   String
  createdAt DateTime  @default(now())

  owner User      @relation(fields: [ownerId], references: [id])
  tasks TaskTag[]

  @@unique([ownerId, name])
  @@index([ownerId])
}

model TaskTag {
  taskId String
  tagId  String

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([taskId, tagId])
}

// ============================================
// Focus Sessions (Pomodoro)
// ============================================
model FocusSession {
  id          String    @id @default(cuid())
  ownerId     String
  taskId      String?   // Optional - can focus without a specific task
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  duration    Int       @default(25) // Minutes planned
  actualMinutes Int?    // Actual minutes completed
  completed   Boolean   @default(false)
  type        String    @default("focus") // 'focus', 'short_break', 'long_break'
  createdAt   DateTime  @default(now())

  @@index([ownerId, createdAt(sort: Desc)])
}

// ============================================
// Comments System
// ============================================
model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

// ============================================
// Activity History
// ============================================
model ActivityLog {
  id          String   @id @default(cuid())
  action      String   // 'CREATE', 'UPDATE', 'DELETE'
  entityType  String   // 'task', 'list', 'subtask', 'comment'
  entityId    String
  entityTitle String?  // Cached title for display
  changes     Json?    // For updates: { field: { old: x, new: y } }
  createdAt   DateTime @default(now())

  @@index([createdAt(sort: Desc)])
  @@index([entityType])
}

// ============================================
// File Attachments
// ============================================
model Attachment {
  id           String   @id @default(cuid())
  filename     String   // UUID filename on disk
  originalName String   // Original uploaded filename
  mimetype     String
  size         Int      // bytes
  path         String   // storage path
  entityType   String   // 'task', 'list'
  entityId     String
  taskId       String?  // Optional direct relation to task
  createdAt    DateTime @default(now())

  task Task? @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([entityType, entityId])
}

// ============================================
// Webhooks
// ============================================
model Webhook {
  id              String       @id @default(cuid())
  url             String
  secret          String       // For HMAC signature verification
  events          Json         // ['task.created', 'task.updated', ...]
  isActive        Boolean      @default(true)
  lastTriggeredAt DateTime?
  failureCount    Int          @default(0)
  createdAt       DateTime     @default(now())

  logs WebhookLog[]
}

model WebhookLog {
  id             String   @id @default(cuid())
  webhookId      String
  event          String
  payload        Json
  responseStatus Int?
  responseBody   String?
  success        Boolean
  createdAt      DateTime @default(now())

  webhook Webhook @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  @@index([webhookId])
}

model Subtask {
  id        String   @id @default(cuid())
  taskId    String
  title     String
  completed Boolean  @default(false)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@index([taskId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
